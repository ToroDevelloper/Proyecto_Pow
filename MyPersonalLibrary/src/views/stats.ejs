<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estadísticas de Lectura</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="container mt-4">
    <h1 class="text-center mb-4"><i class="fas fa-chart-pie me-2"></i>ESTADÍSTICAS DE LECTURA</h1>
    
    <div class="text-center mb-4">
        <a href="/" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i>Volver a la Biblioteca</a>
    </div>

    <!-- Filtros -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form action="/stats" method="GET" class="row g-3 align-items-end justify-content-center">
                <div class="col-md-3">
                    <label for="genre" class="form-label">Género</label>
                    <input type="text" class="form-control" id="genre" name="genre" placeholder="Ej: Ciencia Ficción" value="<%= filterApplied.genre || '' %>">
                </div>
                <div class="col-md-3">
                    <label for="author" class="form-label">Autor</label>
                    <input type="text" class="form-control" id="author" name="author" placeholder="Ej: George Orwell" value="<%= filterApplied.author || '' %>">
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-filter me-1"></i>Filtrar</button>
                </div>
                <% if (filterApplied.genre || filterApplied.author) { %>
                <div class="col-md-1">
                    <a href="/stats" class="btn btn-outline-secondary w-100" title="Limpiar filtros"><i class="fas fa-undo"></i></a>
                </div>
                <% } %>
            </form>
        </div>
    </div>

    <div class="mb-4 text-center">
        <h3 class="text-primary">Total de Libros: <%= totalBooks %></h3>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <% stats.forEach(function(stat){ %>
                <div class="card p-3 mb-3 shadow-sm">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">
                            <% if(stat.status === 'Leído') { %>
                                <i class="fas fa-check-circle text-success me-2"></i>
                            <% } else if(stat.status === 'Leyendo') { %>
                                <i class="fas fa-book-reader text-warning me-2"></i>
                            <% } else { %>
                                <i class="fas fa-hourglass-half text-info me-2"></i>
                            <% } %>
                            <%= stat.status %>
                        </h5>
                        <span class="badge bg-light text-dark border">
                            <strong><%= stat.count %></strong> libros (<%= stat.percentage %>%)
                        </span>
                    </div>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar 
                            <% if(stat.status === 'Leído') { %> bg-success 
                            <% } else if(stat.status === 'Leyendo') { %> bg-warning text-dark
                            <% } else { %> bg-info text-dark <% } %>" 
                            role="progressbar" 
                            style="width: <%= stat.percentage %>%" 
                            aria-valuenow="<%= stat.percentage %>" 
                            aria-valuemin="0" 
                            aria-valuemax="100">
                            <%= stat.percentage %>%
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>