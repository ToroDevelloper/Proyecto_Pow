<%- include('partials/encabezado') %>

<div class="row mb-4">
    <div class="col-md-8">
        <h1><i class="fas fa-book me-2"></i>Mi Colección</h1>
        <p class="text-muted">Gestiona tus lecturas de forma sencilla.</p>
    </div>
    <div class="col-md-4 text-end">
        <a href="/estadisticas" class="btn btn-info text-white me-2"><i class="fas fa-chart-bar me-1"></i>Estadísticas</a>
        <a href="/crear" class="btn btn-success"><i class="fas fa-plus me-1"></i>Agregar Libro</a>
    </div>
</div>

<!-- Carrusel de Libros Pendientes -->
<% if (librosPendientes && librosPendientes.length > 0) { %>
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="fas fa-hourglass-half me-2"></i>Lecturas Pendientes</h5>
    </div>
    <div class="card-body">
        <div id="pendingBooksCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% librosPendientes.forEach((libro, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <div class="d-flex justify-content-center align-items-center">
                            <img src="<%= libro.urlPortada %>" class="d-block me-4" alt="<%= libro.titulo %>" style="height: 200px; object-fit: cover; border-radius: 5px;">
                            <div>
                                <h5><%= libro.titulo %></h5>
                                <p class="text-muted"><%= libro.Autor ? libro.Autor.nombre : 'Desconocido' %></p>
                                <span class="badge bg-secondary"><%= libro.Genero ? libro.Genero.nombre : 'Sin género' %></span>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <% if (librosPendientes.length > 1) { %>
                <button class="carousel-control-prev" type="button" data-bs-target="#pendingBooksCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#pendingBooksCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
                    <span class="visually-hidden">Siguiente</span>
                </button>
            <% } %>
        </div>
    </div>
</div>
<% } %>

<% if (libros.length === 0) { %>
    <div class="alert alert-info text-center">
        <h4>¡Tu biblioteca está vacía!</h4>
        <p>Empieza agregando tu primer libro.</p>
        <a href="/crear" class="btn btn-primary mt-2">Agregar ahora</a>
    </div>
<% } else { %>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3">
        <% libros.forEach(libro => { %>
            <div class="col">
                <div class="card h-100 shadow-sm book-card">
                    <div class="card-img-wrapper">
                        <img src="<%= libro.urlPortada %>" class="card-img-top" alt="<%= libro.titulo %>">
                    </div>
                    <div class="card-body p-2">
                        <h6 class="card-title text-truncate" title="<%= libro.titulo %>"><%= libro.titulo %></h6>
                        <p class="card-subtitle mb-2 text-muted small text-truncate"><%= libro.Autor ? libro.Autor.nombre : 'Desconocido' %></p>
                        <div class="mb-2">
                            <span class="badge bg-secondary" style="font-size: 0.7rem;"><%= libro.Genero ? libro.Genero.nombre : 'Sin género' %></span>
                        </div>
                        <div class="mb-2">
                            <% if(libro.estado === 'Leído') { %>
                                <span class="badge bg-success w-100">Leído</span>
                            <% } else if(libro.estado === 'Leyendo') { %>
                                <span class="badge bg-warning text-dark w-100">Leyendo</span>
                            <% } else { %>
                                <span class="badge bg-info text-dark w-100">Pendiente</span>
                            <% } %>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0 d-flex justify-content-between p-2">
                        <a href="/editar/<%= libro.id %>" class="btn btn-outline-primary btn-sm py-0 px-1" style="font-size: 0.8rem;"><i class="fas fa-edit"></i></a>
                        <form action="/eliminar/<%= libro.id %>?_method=DELETE" method="POST" class="d-inline delete-form" onsubmit="return confirmDelete(event, this);">
                            <button type="submit" class="btn btn-outline-danger btn-sm py-0 px-1" style="font-size: 0.8rem;"><i class="fas fa-trash"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>

<%- include('partials/pie') %>

<script>
    // Función para confirmar eliminación
    function confirmDelete(event, form) {
        event.preventDefault();
        Swal.fire({
            title: '¿Estás seguro?',
            text: "No podrás revertir esta acción",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Sí, borrar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                form.submit();
            }
        });
    }

    // Detectar parámetros de URL para mostrar alertas de éxito
    // Se ejecuta después de que el footer (que contiene SweetAlert2) se haya cargado
    document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        const alertType = urlParams.get('alerta');

        if (alertType) {
            let title, text, icon;
            
            switch(alertType) {
                case 'creado':
                    title = '¡Creado!';
                    text = 'El libro ha sido agregado correctamente.';
                    icon = 'success';
                    break;
                case 'actualizado':
                    title = '¡Actualizado!';
                    text = 'El libro ha sido actualizado correctamente.';
                    icon = 'success';
                    break;
                case 'eliminado':
                    title = '¡Eliminado!';
                    text = 'El libro ha sido eliminado correctamente.';
                    icon = 'success';
                    break;
            }

            if (title) {
                Swal.fire({
                    title: title,
                    text: text,
                    icon: icon,
                    timer: 3000,
                    showConfirmButton: false
                });
                // Limpiar la URL
                window.history.replaceState({}, document.title, "/");
            }
        }
    });
</script>