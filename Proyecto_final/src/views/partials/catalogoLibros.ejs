<!-- Encabezado del catálogo con filtros y contador de libros -->
<div class="library-header mb-4">
    <h6 class="library-title">
        <!-- Menú desplegable para filtros -->
        <div class="dropdown d-inline-block">
            <a href="#" role="button" id="filterDropdownIcon" data-bs-toggle="dropdown" aria-expanded="false" class="filter-icon-trigger">
                <i class="fas fa-list me-2"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="filterDropdownIcon">
                <li><h6 class="dropdown-header">Por Categoría</h6></li>
                <li><a class="dropdown-item <%= !selectedCategoria ? 'active' : '' %>" href="/">Todas</a></li>
                <% generos.forEach(genero => { %>
                    <li><a class="dropdown-item <%= selectedCategoria === genero.nombre ? 'active' : '' %>" href="/?categoria=<%= genero.nombre %>"><%= genero.nombre %></a></li>
                <% }) %>
                <li><hr class="dropdown-divider"></li>
                <li><h6 class="dropdown-header">Por Estado</h6></li>
                <li><a class="dropdown-item <%= !selectedEstado ? 'active' : '' %>" href="/">Todos</a></li>
                <li><a class="dropdown-item <%= selectedEstado === 'Leído' ? 'active' : '' %>" href="/?estado=Leído">Leído</a></li>
                <li><a class="dropdown-item <%= selectedEstado === 'Leyendo' ? 'active' : '' %>" href="/?estado=Leyendo">Leyendo</a></li>
                <li><a class="dropdown-item <%= selectedEstado === 'Pendiente' ? 'active' : '' %>" href="/?estado=Pendiente">Pendiente</a></li>
            </ul>
        </div>
        Todos los libros
        <!-- Contador de libros mostrados -->
        <span class="badge badge-count"><%= libros.length %></span>
    </h6>
</div>

<!-- Condición para mostrar mensaje si no hay libros -->
<% if (libros.length === 0) { %>
    <div class="empty-state-container-small">
        <div class="empty-state-small">
            <i class="fas fa-search-minus"></i>
            <h4>No se encontraron libros</h4>
            <p>No hay libros que coincidan con los filtros seleccionados.</p>
        </div>
    </div>
<% } else { %>
    <!-- Contenedor de la cuadrícula de libros -->
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
        <% libros.forEach(libro => { %>
            <div class="col">
                <!-- Tarjeta individual de cada libro -->
                <div class="card h-100 shadow-sm book-card book-card-elegant">
                    <!-- Imagen del libro (clic para abrir modal) -->
                    <div class="card-img-wrapper book-details-trigger" 
                         data-bs-toggle="modal" 
                         data-bs-target="#bookDetailsModal" 
                         data-book-details='<%- JSON.stringify(libro) %>'>
                        <img src="<%= libro.urlPortada %>" class="card-img-top" alt="<%= libro.titulo %>">
                    </div>
                    <!-- Acciones de editar y eliminar sobre la imagen -->
                    <div class="card-img-overlay d-flex align-items-end">
                        <div class="book-actions w-100">
                            <a href="/editar/<%= libro.id %>" class="btn btn-icon-elegant me-2" title="Editar"><i class="fas fa-edit"></i></a>
                            <form action="/eliminar/<%= libro.id %>?_method=DELETE" method="POST" class="d-inline delete-form">
                                <button type="submit" class="btn btn-icon-danger" title="Eliminar"><i class="fas fa-trash"></i></button>
                            </form>
                        </div>
                    </div>
                    <!-- Cuerpo de la tarjeta con información del libro (clic para abrir modal) -->
                    <div class="card-body p-3 book-details-trigger"
                         data-bs-toggle="modal" 
                         data-bs-target="#bookDetailsModal" 
                         data-book-details='<%- JSON.stringify(libro) %>'>
                        <h6 class="card-title text-truncate" title="<%= libro.titulo %>"><%= libro.titulo %></h6>
                        <p class="card-subtitle mb-3 text-muted text-truncate small"><%= libro.Autor ? libro.Autor.nombre : 'Desconocido' %></p>
                        
                        <div class="mb-3">
                            <span class="badge badge-genre"><%= libro.Genero ? libro.Genero.nombre : 'Sin género' %></span>
                        </div>
                        
                        <!-- Estado del libro con su respectivo ícono y color -->
                        <div>
                            <% if(libro.estado === 'Leído') { %>
                                <span class="badge badge-estado badge-leido w-100"><i class="fas fa-check me-1"></i>Leído</span>
                            <% } else if(libro.estado === 'Leyendo') { %>
                                <span class="badge badge-estado badge-leyendo w-100"><i class="fas fa-book-open me-1"></i>Leyendo</span>
                            <% } else { %>
                                <span class="badge badge-estado badge-pendiente w-100"><i class="fas fa-clock me-1"></i>Pendiente</span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>